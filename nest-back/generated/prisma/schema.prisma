generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Role {
  id   Int    @id @default(autoincrement())
  name String
  // Связи
  user User[]
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  surname  String
  email    String @unique
  password String
  roleId   Int
  // Связи
  role     Role   @relation(fields: [roleId], references: [id], onDelete: Cascade)
}

model Category {
  id       Int       @id @default(autoincrement())
  name     String    @unique
  // Связи
  products Product[]
}

model Product {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  price       Int
  categoryId  Int
  // Связи
  category    Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  images      Images[]
}

model Images {
  id        Int     @id @default(autoincrement())
  image     String
  productId Int
  // Связи
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)
}
